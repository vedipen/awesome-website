<html>
  <head>
    <title>AwesomeWeb</title>
    <link rel="shortcut icon" type="image/png" href="https://ohshitgit.com/favicon-16x16.png" sizes="16x16"/>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-109763758-3"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-109763758-3');
    </script>
    <%= yield %>
  </body>
</html>
